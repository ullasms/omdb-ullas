<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_home_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search For Movie"
            android:layout_marginTop="16dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorTitle" />

        <FrameLayout
            android:id="@+id/frameLayoutnowplayingMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Movies"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorTitle" />

        <FrameLayout
            android:id="@+id/frameLayoutupcomingmovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Air TV Shows"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorTitle" />

        <FrameLayout
            android:id="@+id/frameLayoutonairTvshows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></FrameLayout>

    </LinearLayout>
</ScrollView>